@{
  ViewData["Title"] = "Home Page";
}



<style>
  .body {
    background-repeat: no-repeat;
    background-position: center;
  }

  .mdi mdi-account-supervisor {
    width: 80px !important;
    height: 80px !important;
  }

  .mdi mdi-account-group {
    width: 80px !important;
    height: 80px !important;
  }

  .mdi mdi-account-switch m-b-1 {
    width: 80px !important;
    height: 80px !important;
  }
